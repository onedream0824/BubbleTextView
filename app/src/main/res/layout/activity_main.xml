<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity"
              android:orientation="vertical"
              android:background="#2196F3"
              android:gravity="center"
        >

    <com.example.dpt.bubbletextview.widget.LeBubbleTextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bubbleText="@string/hello_world"
            app:relativePosition="50%"
            app:bubbleArrowDirection="bottom"
            />
    <com.example.dpt.bubbletextview.widget.LeBubbleTextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bubbleText="@string/hello_world"
            app:relativePosition="40%"
            app:bubbleArrowDirection="right"
            />
    <com.example.dpt.bubbletextview.widget.LeBubbleTextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bubbleText="@string/hello_world"
            app:relativePosition="60%"
            app:bubbleArrowDirection="left"
            style="@style/LeBubbleTextView.Light"
            />
    <com.example.dpt.bubbletextview.widget.LeBubbleTextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bubbleText="@string/hello_world"
            app:relativePosition="60%"
            app:bubbleArrowDirection="top"
            style="@style/LeBubbleTextView.Light"
            />

</LinearLayout>
